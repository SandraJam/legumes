{# src/Administrator/Administration/views/Gerer/gererAdminUser.html.twig #}
{% extends '::base.html.twig' %}

{% block style %}
  <link href="{{ asset('bundles/accueilaccueil/css/Administration.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}
  administration des utilisateurs administrateurs
{% endblock %}

{% block body %}
  <div class="container whiteBloc">
    <h1>administrateur : page de gestion des clients</h1>
    <div class="blocUn">
      <form action="{{ path('administrator_administration_admin_actions_Utilisateur_admin') }}" method="post">
          <table>
                <tr>
                    <th class="nom">Nom</th>
                    <th class="prenom">prénom</th>
                    <th class="adresse">Adresse</th>
                    <th class="codePostal">Code Postal</th>
                    <th class="ville">Ville</th>
                    <th class="dateNaissance">Date de Naissance</th>
                    <th class="tel">Numéro de téléphone</th>
                    <th class="email">Email</th>
                    <th class="actions" colspan="2">Action</th>
                </tr>
               {% for superUser in listClients %}
                     <tr>
                         <td id="nomtd {{loop.index}}">{{ superUser.nom }}</td>
                         <td id="prenomtd {{loop.index}}">{{ superUser.prenom }}</td>
                         <td id="adressetd {{loop.index}}">{{ superUser.adresse }}</td>
                         <td id="codePostaltd {{loop.index}}">{{ superUser.codePostal }}</td>
                         <td id="villetd {{loop.index}}">{{ superUser.ville }}</td>
                         <td id="dateNaissancetd {{loop.index}}">{{ superUser.dateNaissance }}</td>
                         <td id="teltd {{loop.index}}">{{ superUser.tel }}</td>
                         <td id="emailtd {{loop.index}}">{{ superUser.email }}</td>
                         <td id="boutonModif"><button type="submit" name="modif" value="Modif" onClick="buttonSelected(this,{{ superUser.id }})">Modifier</button></td>
                         <td id="boutonSuppr"><button type="submit" name="suppr" value="Suppr" onClick="buttonSelected(this,{{ superUser.id }})">Supprimer</button></td>
                    </tr>
                {% endfor %}
          </table>
          <div class="blocB">            
            <button type="submit" name="annuler" value="Retour" onclick="history.back()">Retour</button> 
            <input type="hidden" name="userId" id="userId" value="">
            <input type="hidden" name="buttonId" id="buttonId" value="">
          </div>
      </form>
    </div>
  </div>  
{% endblock %}

{% block js %}
  <script type="text/javascript">

    function buttonSelected(buttonId,userId){
      document.getElementById("buttonId").value = button.value;
      document.getElementById("userId").value = userId;
    }

  </script>
{% endblock %}